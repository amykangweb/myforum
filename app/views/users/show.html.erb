<h3>User Profile Page</h3>

<p><%= image_tag @user.gravatar_url %></p>

<p><strong>Name:</strong> <%= @user.name %></p>

<p><strong>Email:</strong> <%= @user.email %></p>

<p><strong>Account Created:</strong> <%= time_ago_in_words(@user.created_at) %></p>

<p><strong>Post Count:</strong> <%= @user.posts.count %></p>

<% if user_signed_in? %>
<% if current_user == @user || current_user.admin? %>

<p><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></p>

<% end %>
<% end %>