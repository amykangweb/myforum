<p id="notice"><%= notice %></p>

<p><%= link_to "Reply", new_post_reply_path(@post) %></p>

<p><strong>Posted by: <%= @post.user.email %></strong></p>

<p>Posted <%= time_ago_in_words(@post.created_at) %> ago.</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if user_signed_in? %>
<% if @post.user == current_user || current_user.admin? %>

<%= link_to 'Edit Post', edit_post_path(@post) %>

<% end %>

<% if current_user.admin? %>

&nbsp;|&nbsp;<%= link_to "Delete", @post, method: :delete, data: {confirm: "are you sure?"} %>

<% end %>
<% end %>

<p></p>

<% unless @post.replies.blank? %>

<% @post.replies.each do |reply| %>
	<strong>Posted by: <%= reply.user.email %></strong><br>
	<p><%= reply.body %></p>

<% if user_signed_in? %>
	<% if reply.user == current_user || current_user.admin? %>

		<%= link_to "Edit", edit_post_reply_path(reply.post, reply) %>

	<% end %>

	<% if current_user.admin? %>

		&nbsp;|&nbsp;<%= link_to "Delete", [reply.post, reply], method: :delete, data: {confirm: "are you sure?"} %>

	<% end %>
<% end %>

<p></p>

<% end %>

<% end %>

<p><%= render 'replies/form' %></p>
